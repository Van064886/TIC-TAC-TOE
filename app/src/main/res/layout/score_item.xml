<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/firstSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/identifier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="@color/purple_700"
                />
            <TextView
                android:id="@+id/players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pierre VS Marc"
                android:textSize="35sp"
                android:textColor="@color/purple_700"
                android:layout_marginLeft="50dp"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/winner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Winner: Pierre"
            android:textSize="30sp"
            android:textColor="@color/teal_200"
            android:textAlignment="center"
            android:layout_below="@+id/firstSection"
            />

        <TextView
            android:id="@+id/dateGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ven. 28 janv. 2022 06:37:31 CET"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_below="@+id/winner"
            />



    </RelativeLayout>

</LinearLayout>